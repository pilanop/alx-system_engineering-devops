#!/bin/bash

# Function to retrieve DNS information for a subdomain
get_dns_info() {
    local domain="$1"
    local subdomain="$2"
    local record_type="$3"

    if [[ -z "$subdomain" ]]; then
        subdomain="www lb-01 web-01 web-02"
    fi

    for sub in $subdomain; do
        result=$(dig "$sub.$domain" | awk '/ANSWER SECTION:/ {getline; print}')
        echo "The subdomain $sub is a $record_type record and points to $result"
    done
}

# Check for correct number of arguments
if [[ $# -lt 1 ]]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

domain="$1"
subdomain="$2"
record_type=$(dig "$domain" | awk '/ANSWER SECTION:/ {getline; print $4}')

get_dns_info "$domain" "$subdomain" "$record_type"
